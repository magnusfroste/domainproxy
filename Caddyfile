  tls internal
  reverse_proxy subdomain:3000
}

# Prod edge: SaaS proxy on new VPS
proxy.froste.eu {
  reverse_proxy proxy:3000
}

*.proxy.froste.eu {
  reverse_proxy proxy:3000
}