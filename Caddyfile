# Localhost HTTP access (port 80)
http://localhost {
  reverse_proxy subdomain:3000
}

# Local wildcard HTTP (*.lvh.me → Subdomain) - no TLS for local testing
http://*.lvh.me {
  reverse_proxy subdomain:3000
}

# HTTPS localhost (port 443) - with self-signed cert
https://localhost {
  tls internal
  reverse_proxy subdomain:3000
}

# HTTPS lvh.me wildcard - with self-signed cert (optional)
https://*.lvh.me {
  tls internal
  reverse_proxy subdomain:3000
}

# Prod wildcard example (*.froste.eu → Subdomain)
# *.froste.eu {
#   tls your-email@example.com  # Auto Let's Encrypt
#   reverse_proxy subdomain:3000
# }