# Localhost HTTP access (port 80)
http://localhost {
  reverse_proxy subdomain:3000
}

# Local wildcard HTTP (*.lvh.me â†’ Subdomain) - no TLS for local testing
http://*.lvh.me {
  reverse_proxy subdomain:3000
}

# HTTPS localhost (port 443) - with self-signed cert
https://localhost {
  tls internal
  reverse_proxy subdomain:3000
}

https://*.lvh.me {
  tls internal
  reverse_proxy subdomain:3000
}

# Prod edge: SaaS proxy on new VPS (HTTPS + HTTP)
proxy.froste.eu {
  reverse_proxy proxy:3000 {
    header_up Host {host}
  }
}

# Demo customer domain (froste.eu) via proxy (HTTPS + HTTP)
career.froste.eu {
  reverse_proxy proxy:3000 {
    header_up Host {host}
  }
}

# HTTP-only test hosts (no HSTS history)
http://proxy-test.froste.eu {
  reverse_proxy proxy:3000 {
    header_up Host {host}
  }
}

http://career-test.froste.eu {
  reverse_proxy proxy:3000 {
    header_up Host {host}
  }
}