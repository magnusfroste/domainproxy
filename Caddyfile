:80 {
  redir https://{host}{uri} permanent
}

# Local wildcard (*.lvh.me → Subdomino)
*.lvh.me {
  tls internal
  reverse_proxy subdomino:3000
}

# CMS direct access (login/dashboard)
localhost:3001, 127.0.0.1:3001 {
  tls internal
  reverse_proxy career-cms:3001
}

